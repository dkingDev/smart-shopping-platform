# AWS Database Configuration for Smart Shopping Website
# Copy this file to .env and fill in your actual AWS RDS PostgreSQL details

# ========================================
# AWS RDS PostgreSQL Connection Details
# ========================================
AWS_DB_HOST=your-rds-endpoint.amazonaws.com
AWS_DB_PORT=5432
AWS_DB_NAME=smartshopping
AWS_DB_USER=admin
AWS_DB_PASSWORD=your_secure_password_here

# ========================================
# Security Configuration
# ========================================
# JWT Configuration (Generate strong secret: openssl rand -hex 32)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-please
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Configuration for production
ALLOWED_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]

# ========================================
# AWS Services Configuration
# ========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# ========================================
# Application Configuration
# ========================================
# Environment (development, staging, production)
ENVIRONMENT=development
DEBUG=true

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# ========================================
# Crawler Configuration
# ========================================
CRAWLER_USER_AGENT=SmartShopping-Bot/1.0
CRAWLER_DELAY_SECONDS=1
CRAWLER_MAX_CONCURRENT=5
CRAWLER_TIMEOUT_SECONDS=30

# ========================================
# Monetization Configuration
# ========================================
# Affiliate Program IDs
TESCO_AFFILIATE_ID=your_tesco_affiliate_id
MORRISONS_AFFILIATE_ID=your_morrisons_affiliate_id
ASDA_AFFILIATE_ID=your_asda_affiliate_id

# Stripe Configuration (for subscriptions)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ========================================
# Email Configuration (for alerts and notifications)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
FROM_EMAIL=noreply@yourdomain.com

# ========================================
# Redis Configuration (for caching and sessions)
# ========================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password

