{
  "national_price_tracking": {
    "enabled_stores": [
      "morrisons",
      "tesco",
      "asda",
      "sainsburys",
      "waitrose",
      "marks_spencer",
      "aldi",
      "lidl"
    ],
    "branded_products_only": true,
    "image_validation": true,
    "price_change_threshold": 0.01,
    "crawl_schedule": {
      "daily": [
        "morrisons",
        "tesco",
        "asda"
      ],
      "weekly": [
        "sainsburys",
        "waitrose",
        "marks_spencer"
      ],
      "monthly": [
        "aldi",
        "lidl"
      ]
    }
  },  "database": {
    "type": "aws_postgresql",
    "provider": "aws_rds",
    "connection": {
      "use_environment_variables": true,
      "required_env_vars": [
        "AWS_DB_HOST",
        "AWS_DB_PORT", 
        "AWS_DB_NAME",
        "AWS_DB_USER",
        "AWS_DB_PASSWORD"
      ]
    },
    "tables": {
      "master_products": "branded_products",
      "store_prices": "store_prices",
      "price_history": "price_history_log",
      "categories": "product_categories",
      "brands": "brand_catalog"
    },
    "features": {
      "auto_backup": true,
      "point_in_time_recovery": true,
      "connection_pooling": true,
      "ssl_required": true
    },
    "performance": {
      "batch_insert_size": 1000,
      "connection_timeout": 30,
      "query_timeout": 60
    }
  },
  "validation": {
    "brand_images_path": "images/branded_products/",
    "min_product_name_length": 3,
    "excluded_brands": [
      "morrisons",
      "tesco",
      "asda",
      "own brand",
      "store brand"
    ]
  }
}